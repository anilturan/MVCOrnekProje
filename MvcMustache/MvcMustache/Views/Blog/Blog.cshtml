@using MvcMustache.Models
@model BlogModel
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="body">
    <h1><span>@Model.BlogBaslik[0]</span></h1>
    <div>
        <ul>
            <li>
